<%- include("partials/header") -%>
	
    <h1>Home</h1>
    <p><%= content %></p>

    <form action="/compose" method="get">
        <button type="submit" class="btn btn-primary">Compose</button>
    </form>
    
    <% postsList.forEach(function(post){ %>
        <div class="post">
          <h2> <%= post.title %> </h2>
          <% if(post.content.length > 100){ %>
            <p> <%= post.content.substring(0, 100) + "..." %> 
            <a href="/posts/<%= post._id %>">Read More</a>
            </p> 
          <% }else{ %>
          <p> <%= post.content %> </p>
          <% } %>  
          <footer><%= post.creationDate %></footer> 
        </div>
    <% }); %>

  <%- include("partials/footer") -%>	
